      color: #000;
      margin: 0;
      padding: 0px 0px;
    }

    html,
    body {
      position: relative;

    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swiper {
      width: 320px;
      height: 420px;
      display: flex;
      justify-content: space-around;
      position: relative;
      bottom: 0px;
    }

    @media (max-width: 1600px) {
      .swiper {
        width: 280px;
        height: 380px;
        bottom: 330px;
      }
    }

    @media (max-width: 1350px) {
      .swiper {
        width: 240px;
        height: 320px;
        bottom: 215px;
      }
    }
    @media (max-width: 440px) {
      .swiper {
        width: 200px;
        height: 250px;
        bottom: 0px;
      }
    }

    .swiper-slide {
      display: flex;
      border-radius: 4px;
      padding: 20px 10px;
      margin-bottom: 40px;
      font-family: 'Inter';
      font-weight: 300;
      color: #fff;
    }

    .active-card-text {
      display: flex;
      justify-content: space-between;
      transform: translateY(-50%);
      padding: 10px;
      position: absolute;
    }

    .active-card-left {
      position: relative;
      top: 250px;
    }

    .active-card-right {
      position: relative;
      top: 250px;
      left: 660px;
    }

    .active-card-text-mobile {
      display: none;
    }

