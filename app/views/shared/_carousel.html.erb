<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Swiper demo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
  <!-- Link Swiper's CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
  <!-- Demo styles -->
  <style>
    html,

    body {
      font-size: 10px;
      color: #FAF9F7;
      margin: 0;
      padding: 0px 0px;
    }

    body {
      background: #FAF9F7;
      font-size: 14px;
      color: #000;
      margin: 0;
      padding: 0px 0px;
    }

    html,
    body {
      position: relative;

    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swiper {
      width: 240px;
      height: 320px;
      display: flex;
      justify-content: space-around;
      position: relative;
    }
    @media (max-width: 440px) {
      .swiper {
        width: 220px;
        height: 280px;
      }
    }

    .swiper-slide {
      display: flex;
      border-radius: 4px;
      font-size: 18px;
      padding: 20px 10px;
      margin-bottom: 40px;
      font-family: 'Inter';
      font-weight: 300;
      color: #fff;
    }

    .active-card-text {
      display: flex;
      justify-content: space-between;
      transform: translateY(-50%);
      padding: 10px;
    }

    @media (max-width: 440px) {
      .active-card-text {
        display: none;
      }
    }

    .swiper-slide:nth-child(1n) {
      background-color: #521945;
    }

    .swiper-slide:nth-child(2n) {
      background-color: #CC978E;
    }

    .swiper-slide:nth-child(3n) {
      background-color: #912F56;
    }

    .swiper-slide:nth-child(4n) {
      background-color: #0C4767;
    }

    .swiper-slide:nth-child(5n) {
      background-color: #808F85;
    }

    .arrow-path {
      fill: none;
      stroke: #FAF9F7;
      stroke-width: 2;
      stroke-dasharray: 200;
      stroke-dashoffset: 200;
      animation: drawLine 2s linear infinite, arrowAppear 2s linear infinite;
    }

    .arrow-line-upper {
      fill: none;
      stroke: #FAF9F7;
      stroke-width: 2;
      stroke-dasharray: 200;
      stroke-dashoffset: 200;
      animation: drawLine 2s linear infinite, arrowAppear 3s linear infinite;
    }
    .arrow-line-lower {
      fill: none;
      stroke: #FAF9F7;
      stroke-width: 2;
      stroke-dasharray: 200;
      stroke-dashoffset: 200;
      animation: drawLine 2s linear infinite, arrowAppear 3s linear infinite;
    }

    .highlight-container, .highlight {
      position: relative;
    }

    .highlight-container {
      display: inline-block;
    }
    .highlight-container:before {
      content: " ";
      display: block;
      height: 90%;
      width: 105%;
      margin-left: -3px;
      margin-right: -3px;
      position: absolute;
      background: #EAC435;
      transform: rotate(2deg);
      top: -1px;
      left: -1px;
      border-radius: 20% 25% 20% 24%;
      padding: 10px 3px 3px 10px;
    }

    .highlight-container2, .highlight2 {
      position: relative;
    }

    .highlight-container2 {
      display: inline-block;
    }
    .highlight-container2:before {
      content: " ";
      display: block;
      height: 90%;
      width: 120%;
      margin-left: -3px;
      margin-right: -3px;
      position: absolute;
      background: #295F7B;
      transform: rotate(2deg);
      top: -1px;
      left: -1px;
      border-radius: 20% 25% 20% 24%;
      padding: 10px 3px 3px 10px;
    }

    @keyframes drawLine {
      0% {
        stroke-dashoffset: 200;
      }
      100% {
        stroke-dashoffset: 0;
      }
    }

    @keyframes fade {
      0%, 49.9% {
        opacity: 0;
      }
      50%, 100% {
        opacity: 1;
      }
    }

    @keyframes arrowAppear {
      0%, 49.9% {
        transform: translateY(0);
      }
      50%, 100% {
        transform: translateY(0);
      }
    }



  </style>
</head>

<body>
  <!-- Swiper -->
  <div class="active-card-text">
    <div class="container active-card-text-left md:ml-24">
      <span class="highlight-container font-title uppercase md:text-[20px] md:text-bold"><span class="highlight">Achievements:</span></span><br>
      <span id="activeCardTextLeft">Blablablabla: Slide 1 text goes here</span>
    </div>
    <div class="active-card-text-right md:mr-24">
      <span class="highlight-container2 font-title uppercase md:text-[20px] md:text-bold"><span class="highlight2 text-backgroundcolor">Skills:</span></span><br>
      <span id="activeCardTextRight" >Blab: Slide 1 text goes here</span>
    </div>
  </div>

  <div class="swiper mySwiper md:mt-[-120px]">
    <div class="swiper-wrapper text-center">
      <div class="swiper-slide">
        <div class="flex flex-col">
          <div class="text-[18px] px-4">
            <span>
              <%= t('slide1-title') %>
            </span>
          </div>
          <div class="arrow-container pt-36 pl-16">
            <svg class="arrow-svg" width="120" height="60" viewBox="0 0 120 60" xmlns="http://www.w3.org/2000/svg">
              <path class="arrow-path" d="M10 30 Q40 25, 100 30" />
              <line class="arrow-line-upper" x1="100" y1="20" x2="115" y2="30" />
              <line class="arrow-line-lower" x1="100" y1="40" x2="115" y2="30" />
            </svg>
          </div>
        </div>
      </div>
      <div class="swiper-slide"><%= t('slide2-title') %></div>
      <div class="swiper-slide"><%= t('slide3-title') %></div>
      <div class="swiper-slide"><%= t('slide4-title') %></div>
      <div class="swiper-slide"><%= t('slide5-title') %></div>
    </div>
  </div>

  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

  <!-- Initialize Swiper -->
  <script>
    var swiper = new Swiper(".mySwiper", {
      effect: "cards",
      grabCursor: true,
      on: {
        slideChange: function () {
          // Array of text for each slide
          var slideTextsLeft = [
            "Achievements: What I achieve here",
            "Achievements: What I achieve here at FoodClass",
            "Achievements: What I achieve here at KPMG",
            "Achievements: What I achieve here at BNP Paribas",
            "Achivements at a glance",
          ];
          var slideTextsRight = [
            "Skills: My skills",
            "Skills: My skills at FoodClass",
            "Your custom text for Slide 3",
            "Your custom text for Slide 4",
            "Your custom text for Slide 5",
          ];

          // Update the additional text section with the active slide text
          document.getElementById("activeCardTextLeft").innerText = slideTextsLeft[this.activeIndex];
          document.getElementById("activeCardTextRight").innerText = slideTextsRight[this.activeIndex];
        },
      },
    });
  </script>
</body>

</html>
