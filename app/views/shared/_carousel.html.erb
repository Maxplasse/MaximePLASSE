<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>Swiper demo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
  <!-- Link Swiper's CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
  <!-- Demo styles -->
  <style>
    html,

    body {
      background: #eee;
      font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
      font-size: 14px;
      color: #000;
      margin: 0;
      padding: 0px 4px;
    }

    body {
      background: #FAF9F7;
      font-size: 14px;
      color: #000;
      margin: 0;
      padding: 0px 4px;
    }

    html,
    body {
      position: relative;

    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .swiper {
      width: 240px;
      height: 320px;
    }

    .swiper-slide {
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 4px;
      font-size: 22px;
      padding: 0px 10px;
      font-weight: bold;
      color: #fff;
    }

    .swiper-slide:nth-child(1n) {
      background-color: #808F85;
    }

    .swiper-slide:nth-child(2n) {
      background-color: #CC978E;
    }

    .swiper-slide:nth-child(3n) {
      background-color: #912F56;
    }

    .swiper-slide:nth-child(4n) {
      background-color: #521945;
    }

    .swiper-slide:nth-child(5n) {
      background-color: #0C4767;
    }
  </style>
</head>

<body>
  <!-- Swiper -->

  <div class="swiper mySwiper">
    <div class="swiper-wrapper text-center">
      <div class="swiper-slide"><%= t('slide1-title') %></div>
      <div class="swiper-slide"><%= t('slide2-title') %></div>
      <div class="swiper-slide"><%= t('slide3-title') %></div>
      <div class="swiper-slide"><%= t('slide4-title') %></div>
      <div class="swiper-slide"><%= t('slide5-title') %></div>
    </div>
  </div>

  <div id="activeCardText" class="active-card-text">
    Blablablabla: Slide 1 text goes here
  </div>

  <!-- Swiper JS -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

  <!-- Initialize Swiper -->
  <script>
    var swiper = new Swiper(".mySwiper", {
      effect: "cards",
      grabCursor: true,
      on: {
        slideChange: function () {
          // Array of text for each slide
          var slideTexts = [
            "Blablablabla: Slide 1 text goes here",
            "Blibliblibli: Slide 2 text goes here",
            "Your custom text for Slide 3",
            "Your custom text for Slide 4",
            "Your custom text for Slide 5",
          ];

          // Update the additional text section with the active slide text
          document.getElementById("activeCardText").innerText = slideTexts[this.activeIndex];
        },
      },
    });
  </script>
</body>

</html>
