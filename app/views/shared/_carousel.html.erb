      animation: scrollText 105s linear infinite;
      animation-delay: -45s;
      white-space: nowrap;
    }

    #container-fc {
      display: none;
    }

    #container-fc > .content-fc {
      float: left;
      height: 500px;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      position: absolute;
    }

    /* Arrow */

    .arrow-fc {
      position: relative;
      margin: 0 auto;
      width: 100px;
      left: 650px;
      top: 404px
    }

    .arrow-fc .curve-fc {
      border: 2px solid #919191;
      border-color: transparent transparent transparent #919191;
      transform:rotate(37deg);
      height: 97px;
      width: 99px;
      border-radius: 133px 0 0 223px;
      opacity: 0;
      animation: fadeInCurve 1s linear forwards;
    }

    .arrow-fc .point-fc {
      position: absolute;
      left: 8px;
      top: 56px;
      opacity: 0;
      animation: fadeInPoints 1s linear forwards;
    }

    .arrow-fc .point-fc:before, .arrow-fc .point-fc:after {
      border: 1.3px solid #212529;
      border-radius: 3px;
      height: 25px;
      content: "";
      position: absolute;
      opacity: 0;
    }

    .arrow-fc .point-fc:before {
      top: -11px;
      left: -10px;
      transform:rotate(-74deg);
      opacity: 0;
      animation: fadeInBeforePoint 1s linear forwards;
    }

    .custom-list {
      list-style-type: none;
    }

    .custom-list li::before {
      content: "\2022";
      color: #f74c20;
      font-size: 14px;
      margin-right: 10px;
    }


    @keyframes fadeInBeforePoint {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    .arrow-fc .point-fc:after {
      top: -20px;
      left: 5px;
      transform:rotate(12deg);
      opacity: 0;
      animation: fadeInAfterPoint 1s linear forwards;
    }

    @keyframes fadeInAfterPoint {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    @keyframes fadeInPoints {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    @keyframes fadeInCurve {
      0% {
        opacity: 0;
      }
      100% {
        opacity: 1;
      }
    }

    @keyframes scrollText {
      0% {
        transform: translateX(100%);
      }
      100% {
        transform: translateX(-100%);
      }
    }

    @keyframes drawLine {
      0% {
        stroke-dashoffset: 200;
      }
      100% {
        stroke-dashoffset: 0;
      }
    }

    @keyframes fade {
      0%, 49.9% {
        opacity: 0;
      }
      50%, 100% {
        opacity: 1;
      }
    }

    @keyframes arrowAppear {
      0%, 49.9% {
        transform: translateY(0);
      }
      50%, 100% {
        transform: translateY(0);
      }
    }

