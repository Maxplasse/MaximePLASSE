    .arrow-line-lower {
      fill: none;
      stroke: #FAF9F7;
      stroke-width: 2;
      stroke-dasharray: 200;
      stroke-dashoffset: 200;
      animation: drawLine 2s linear infinite, arrowAppear 3s linear infinite;
    }

    .highlight-container, .highlight {
      position: relative;
    }

    .highlight-container {
      display: inline-block;
    }
    .highlight-container:before {
      content: " ";
      display: block;
      height: 90%;
      width: 105%;
      margin-left: -3px;
      margin-right: -3px;
      position: absolute;
      background: #EAC435;
      transform: rotate(2deg);
      top: -1px;
      left: -1px;
      border-radius: 20% 25% 20% 24%;
      padding: 10px 3px 3px 10px;
    }

